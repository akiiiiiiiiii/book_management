footer {
  margin-top: 50px;
  background-color: black;
  color: #FFF;
  text-align: center;
  width: 100%;
  bottom: 0;
}

.title{
  font-size: 40px;
  color: #FFF;
}

.dvice_form {
  border : solid 1px #333 ;
  width: 50%;
  margin: auto;
  padding: 10px;
}

.pagination>li>a {
  border: none;
  color: #696969;
}

.pagination>.active>a {
  background: #93c9ff;
  border-radius: 15px;
}


.pagination>li>a:hover {
  border-radius: 15px;
}

.sign_button {
  display: inline-block;

  border-radius: 5px;
  color: #FFF;
  background-color: #337ab7;
  cursor: pointer;
  border: 1px;
  padding: 7px 12px;

  transition: .3s;
}

.button:hover {
  opacity: 1;
}


.sign_up_button {
  margin-right: 5px;
}

.sign_modal_wrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: black;
  opacity: .7;
  display: none;
}

.sign_modal {
  position: absolute;
  background-color: #fff;
  width: 450px;
  height: 350px;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: 100px auto 0;
  border: 1px solid #eee;
  display: none;
  text-align: right;
}

.sign_modal_content {
  display: none;
  text-align: center;
}

.fa_wrapper {
  cursor: pointer;
  margin: 3px 3px 0 0;
}


img {
  width: 100%;
  background-size: cover;
}


